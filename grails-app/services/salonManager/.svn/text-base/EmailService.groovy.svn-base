package salonManager

class EmailService {

	public sendEmailConfirmation(Appointment appointment){
		def emailBody = "How are you? Your appointment has been booked. See you on ${appointment.appointmentDate.format('EEEE')}!"
		sendMail {     
		  to "bjacobi@gmail.com"     
		  subject "SWEET IT WORKS!"     
		  body emailBody
		}
	}

}